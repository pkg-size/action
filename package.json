{
	"name": "pkg-size-action",
	"version": "0.0.0-semantic-release",
	"description": "Check package size changes on pull-requests",
	"keywords": [
		"github",
		"action",
		"pkg-size",
		"package",
		"distribution",
		"size",
		"watch"
	],
	"license": "MIT",
	"repository": "privatenumber/pkg-size-action",
	"funding": "https://github.com/privatenumber/pkg-size-action?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "ncc build -s --external='@npmcli/run-script' src/index.js && :",
		"lint": "xo"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/*.js": [
			"xo --fix",
			"npm run build",
			"git add dist"
		]
	},
	"devDependencies": {
		"@actions/cache": "^1.0.4",
		"@actions/core": "^1.2.6",
		"@actions/exec": "^1.0.4",
		"@actions/github": "^4.0.0",
		"@actions/io": "^1.0.2",
		"@vercel/ncc": "^0.25.1",
		"husky": "^4.3.0",
		"lint-staged": "^10.5.2",
		"xo": "^0.35.0"
	},
	"dependencies": {
		"filesize": "^6.1.0",
		"lodash-es": "^4.17.15",
		"markdown-table": "^2.0.0",
		"outdent": "^0.7.1",
		"pkg-size": "^2.0.0"
	}
}
